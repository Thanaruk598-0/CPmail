<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Course Details - <%= course.name %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <a href="/manageCourse/list?tab=courses" class="btn btn-secondary mb-3">Back to Courses</a>

    <h3>Course Details</h3>
    <table class="table table-bordered">
      <tr><th>ID</th><td><%= course.courseId %></td></tr>
      <tr><th>Name</th><td><%= course.name %></td></tr>
      <tr><th>Description</th><td><%= course.description || '-' %></td></tr>
      <tr><th>Credits</th><td><%= course.credits %></td></tr>
      <tr><th>Semester</th><td><%= course.semester %></td></tr>
    </table>

    <h4 class="mt-4">Sections</h4>
    <% if (sections.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Section Name</th>
            <th>Year</th>
            <th>Schedule</th>
            <th>Room</th>
            <th>Lecturers</th>
            <th>Students</th>
          </tr>
        </thead>
        <tbody>
          <% sections.forEach(sec => { %>
            <tr>
              <td><%= sec.name %></td>
              <td><%= sec.year %></td>
              <td><%= sec.schedule || '-' %></td>
              <td><%= sec.room || '-' %></td>
              <td>
                <%= sec.lecturers.length %> (<%= sec.lecturers.map(l => l.name).join(', ') %>)
              </td>
              <td>
                <%= sec.students.length %> / <%= sec.maxStudents %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No sections found for this course.</p>
    <% } %>
  </div>
</body>
</html>
