<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>แก้ไขรายวิชา</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<script>
document.getElementById('course').addEventListener('change', function() {
  const selectedOption = this.options[this.selectedIndex];
  const semester = selectedOption.getAttribute('data-semester') || '';
  document.getElementById('semesterDisplay').value = semester;
  document.getElementById('semester').value = semester;

  const match = semester.match(/\/(\d{4})$/);
  document.getElementById('hiddenYear').value = match ? match[1] : new Date().getFullYear();
});
</script>
<body class="bg-light">

  <%- include('../partials/navbar', { currentUser: currentUser, activeMenu: activeMenu }) %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header"><h4>แก้ไขรายวิชา</h4></div>
          <div class="card-body">
            <form action="/manageCourse/edit-course/<%= course._id %>" method="POST">
              <div class="mb-3">
                <label class="form-label">รหัสวิชา</label>
                <input type="text" name="courseId" class="form-control" value="<%= course.courseId %>" required>
              </div>
              <div class="mb-3">
                <label class="form-label">ชื่อวิชา</label>
                <input type="text" name="name" class="form-control" value="<%= course.name %>" required>
              </div>
              <div class="mb-3">
                <label class="form-label">รายละเอียด</label>
                <textarea name="description" class="form-control" rows="3"><%= course.description || '' %></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label">หน่วยกิต</label>
                <input type="number" name="credits" class="form-control" value="<%= course.credits %>" min="0" required>
              </div>
              <div class="mb-3">
  <label class="form-label">ภาคการศึกษา (เช่น 1/2567)</label>
  <input type="text" id="semesterDisplay" class="form-control" readonly value="<%= section.semester %>">
  <input type="hidden" id="semester" name="semester" value="<%= section.semester %>">
  <input type="hidden" id="hiddenYear" name="year" value="<%= section.year %>">
</div>
              <button type="submit" class="btn btn-primary">อัปเดต</button>
              <a href="/manageCourse/list?tab=courses" class="btn btn-secondary">ยกเลิก</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>