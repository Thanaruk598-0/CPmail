<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Course</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <%- include('../partials/navbar', { currentUser: currentUser, activeMenu: activeMenu }) %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header"><h4>Add New Course</h4></div>
          <div class="card-body">
            <form action="/manageCourse/add-course" method="POST">
              <div class="mb-3">
                <label class="form-label">Course ID (e.g., CS101)</label>
                <input type="text" name="courseId" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea name="description" class="form-control" rows="3"></textarea>
              </div>
              <div class="mb-3">
                <label class="form-label">Credits</label>
                <input type="number" name="credits" class="form-control" min="0" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Semester (e.g., 1/2567)</label>
                <input type="text" name="semester" class="form-control" required>
              </div>
              <button type="submit" class="btn btn-primary">Add Course</button>
              <a href="/manageCourse/list?tab=courses" class="btn btn-secondary">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>