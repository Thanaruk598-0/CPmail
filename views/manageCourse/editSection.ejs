<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Section</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
    // JS สำหรับ auto year จาก semester (ใช้ hidden)
    function autoYear() {
      const semester = document.getElementById('semester').value;
      const hiddenYear = document.getElementById('hiddenYear');
      const match = semester.match(/\/(\d{4})$/);
      if (match) {
        hiddenYear.value = match[1];
      }
    }
    // JS สำหรับ add/remove schedule slots
    let scheduleCount = 0;
    function addScheduleSlot() {
      scheduleCount++;
      const container = document.getElementById('scheduleContainer');
      const slotDiv = document.createElement('div');
      slotDiv.className = 'schedule-slot mb-3 p-3 border rounded';
      slotDiv.id = `scheduleSlot${scheduleCount}`;
      slotDiv.innerHTML = `
        <div class="row">
          <div class="col-md-3">
            <label class="form-label">Day</label>
            <select class="form-select" name="scheduleDay[]" required>
              <option value="">เลือกวัน</option>
              <option value="จันทร์">จันทร์</option>
              <option value="อังคาร">อังคาร</option>
              <option value="พุธ">พุธ</option>
              <option value="พฤหัสบดี">พฤหัสบดี</option>
              <option value="ศุกร์">ศุกร์</option>
              <option value="เสาร์">เสาร์</option>
              <option value="อาทิตย์">อาทิตย์</option>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Start Time</label>
            <input type="time" class="form-control" name="scheduleStart[]" required>
          </div>
          <div class="col-md-4">
            <label class="form-label">End Time</label>
            <input type="time" class="form-control" name="scheduleEnd[]" required>
          </div>
          <div class="col-md-1">
            <label class="form-label">&nbsp;</label>
            <button type="button" class="btn btn-danger w-100" onclick="removeScheduleSlot('scheduleSlot${scheduleCount}')">Remove</button>
          </div>
        </div>
      `;
      container.appendChild(slotDiv);
    }
    function removeScheduleSlot(slotId) {
      const slot = document.getElementById(slotId);
      if (slot) slot.remove();
    }
    // Init pre-filled slots จาก existing schedule (ใช้ hidden input)
    document.addEventListener('DOMContentLoaded', function() {
      const hiddenInput = document.getElementById('hiddenSchedules');
      const existingSchedules = JSON.parse(hiddenInput ? hiddenInput.value : '[]');
        //
      console.log('Existing schedules:', existingSchedules);

      existingSchedules.forEach(slot => {
        addScheduleSlot(); // เพิ่ม slot ว่าง
        const lastSlot = document.querySelector('.schedule-slot:last-child select[name="scheduleDay[]"]');
        const lastStart = document.querySelector('.schedule-slot:last-child input[name="scheduleStart[]"]');
        const lastEnd = document.querySelector('.schedule-slot:last-child input[name="scheduleEnd[]"]');
        if (lastSlot) lastSlot.value = slot.day || '';
        if (lastStart) lastStart.value = slot.start || '';
        if (lastEnd) lastEnd.value = slot.end || '';
      });
      if (existingSchedules.length === 0) {
        addScheduleSlot(); // ถ้าไม่มี, เพิ่ม 1 slot ว่าง
      }
    });
  </script>
</head>
<body class="bg-light">

  <%- include('../partials/navbar', { currentUser: currentUser, activeMenu: activeMenu }) %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card">
          <div class="card-header"><h4>Edit Section</h4></div>
          <div class="card-body">
            <form action="/manageCourse/edit-section/<%= section._id %>" method="POST">
              <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" name="name" class="form-control" value="<%= section.name %>" required>
              </div>
              <div class="mb-3">
                <label class="form-label">Course</label>
                <select name="course" id="course" class="form-select" required>
                  <option value="">เลือก Course</option>
                  <% courses.forEach(c => { %>
                    <option value="<%= c._id %>" <%= section.course._id.toString() === c._id.toString() ? 'selected' : '' %>><%= c.courseId %> - <%= c.name %></option>
                  <% }); %>
                </select>
              </div>
              <div class="mb-3">
                <label class="form-label">Semester (e.g., 1/2567)</label>
                <input type="text" name="semester" id="semester" class="form-control" value="<%= section.semester %>" required onchange="autoYear()">
                <input type="hidden" id="hiddenYear" name="year" value="<%= section.year %>"> <!-- Hidden สำหรับ year -->
              </div>
              <div class="mb-3">
                <label class="form-label">Max Students</label>
                <input type="number" name="maxStudents" class="form-control" value="<%= section.maxStudents %>" min="1">
              </div>
              <div class="mb-3">
                <label class="form-label">Lecturers (เลือกหลายคนได้)</label>
                <div class="border p-3 rounded" style="max-height: 200px; overflow-y: auto;">
                  <% lecturers.forEach(l => { %>
                    <div class="form-check">
                      <input class="form-check-input" type="checkbox" name="lecturers[]" value="<%= l._id %>" id="lecturer<%= l._id %>" <%= section.lecturers && section.lecturers.some(lec => lec._id.toString() === l._id.toString()) ? 'checked' : '' %>>
                      <label class="form-check-label" for="lecturer<%= l._id %>">
                        <%= l.name %> (<%= l.email %>)
                      </label>
                    </div>
                  <% }); %>
                </div>
                <small class="form-text text-muted">เลือกอาจารย์ผู้สอนหลายคนได้</small>
              </div>
              <div class="mb-3">
                <label class="form-label">Schedule</label>
                <button type="button" class="btn btn-outline-secondary mb-2" onclick="addScheduleSlot()">Add Schedule Slot</button>
                <div id="scheduleContainer"></div>
                <small class="form-text text-muted">เพิ่มสล็อตเรียนหลายวันได้ (วัน + เวลาเริ่ม-สิ้นสุด)</small>
                <!-- Hidden input สำหรับ pre-fill existing schedules -->
                <input type="hidden" id="hiddenSchedules" value="<%= JSON.stringify(existingSchedules || []) %>">
              </div>
              <div class="mb-3">
                <label class="form-label">Room</label>
                <input type="text" name="room" class="form-control" value="<%= section.room || '' %>">
              </div>
              <button type="submit" class="btn btn-primary">Update Section</button>
              <a href="/manageCourse/list?tab=sections" class="btn btn-secondary">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>