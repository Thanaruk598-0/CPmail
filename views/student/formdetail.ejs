<!-- views/student/formdetail.ejs -->
<!DOCTYPE html>
<html lang="th">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>รายละเอียดแบบฟอร์ม - FormEase</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: { 'kku-blue': '#1e40af', 'kku-blue-light': '#3b82f6', 'kku-blue-dark': '#1e3a8a' },
                    boxShadow: { soft: '0 8px 24px rgba(30,64,175,.08)', card: '0 1px 3px rgba(0,0,0,.06), 0 1px 2px rgba(0,0,0,.04)' }
                }
            }
        };
    </script>
    <!-- ฟอนต์ไทยสวยๆ เวลา Export/Print -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Thai:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            color-scheme: light;
        }

        html,
        body {
            font-family: 'Noto Sans Thai', system-ui, -apple-system, Segoe UI, Roboto, sans-serif;
        }

        body {
            box-sizing: border-box;
            background: #f9fafb;
        }

        .form-section {
            background: #fff;
            border-radius: 1rem;
            border: 1px solid #eef2f7;
            box-shadow: 0 1px 3px rgba(0, 0, 0, .06), 0 1px 2px rgba(0, 0, 0, .04);
            margin-bottom: 1.5rem;
            overflow: hidden;
        }

        .section-head {
            padding: 1rem 1.25rem;
            border-bottom: 1px solid #eef2f7;
            background: linear-gradient(180deg, #fff, #fafbff);
        }

        .section-body {
            padding: 1.25rem;
        }

        .action-button {
            transition: all .2s ease;
        }

        .action-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 10px 18px rgba(0, 0, 0, .10);
        }

        .status-badge {
            font-size: .75rem;
            font-weight: 700;
            padding: .35rem .75rem;
            border-radius: 9999px;
            display: inline-flex;
            gap: .4rem;
            align-items: center;
            text-transform: uppercase;
            letter-spacing: .02em;
        }

        .status-badge::before {
            content: '';
            width: .45rem;
            height: .45rem;
            border-radius: 9999px;
            background: currentColor;
            opacity: .6;
        }

        .timeline-item {
            position: relative;
            padding-left: 2rem;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: .55rem;
            top: .55rem;
            width: .5rem;
            height: .5rem;
            border-radius: 9999px;
            background-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, .12);
        }

        /* ปุ่ม/ส่วนที่ไม่อยากให้ติดตอนพิมพ์หรือ PDF */
        .no-print {}

        @media print {
            @page {
                size: A4;
                margin: 12mm;
            }

            html,
            body {
                background: #fff !important;
            }

            .no-print,
            .no-print * {
                display: none !important;
            }

            .form-section {
                box-shadow: none !important;
                border-color: #e5e7eb;
            }

            a[href]:after {
                content: "";
            }

            /* ไม่โชว์ URL ต่อท้ายลิงก์ */
        }
    </style>
</head>

<body class="bg-gray-50 font-sans">

    <!-- ซ่อน navbar ตอนพิมพ์ -->
    <div class="no-print">
        <%- include('../partials/navbar', { activeMenu: 'formhistory' }) %>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-6">
        <% var statusStr=(form && form.status) ? String(form.status) : '' ; var
            isEditable=(statusStr.toLowerCase()==='pending' ); %>

            <div class="mb-6">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                    <div>
                        <div
                            class="mt-2 inline-block bg-kku-blue/5 text-kku-blue font-semibold text-lg px-3 py-1.5 rounded-lg border border-kku-blue/10 shadow-sm">
                            <%= (form && form.template && form.template.title) || 'การส่งแบบฟอร์ม' %>
                        </div>
                    </div>

                    <div class="flex flex-wrap items-center gap-2 sm:mt-0">
                        <span
                            class="status-badge <%= statusStr==='approved' ? 'bg-emerald-100 text-emerald-700' : (statusStr==='pending' ? 'bg-amber-100 text-amber-700' : (statusStr==='rejected' ? 'bg-rose-100 text-rose-700' : 'bg-gray-100 text-gray-700')) %>">
                            <%= ({ approved:'อนุมัติ', pending:'รอดำเนินการ', rejected:'ปฏิเสธ', cancelled:'ยกเลิก',
                                draft:'แบบร่าง' })[(statusStr||'draft').toLowerCase()] ||
                                (statusStr||'DRAFT').toUpperCase() %>
                        </span>

                        <!-- ปุ่ม Export / Print (ไม่ติดไปใน PDF เพราะ no-print) -->
                        <div class="no-print flex items-center gap-2">
                            <button type="button" onclick="window.print()"
                                class="action-button inline-flex items-center gap-2 bg-white border border-gray-200 text-gray-700 px-4 py-2 rounded-lg font-semibold hover:bg-gray-50">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M6 9V2h12v7M6 18H4a2 2 0 01-2-2v-5a2 2 0 012-2h16a2 2 0 012 2v5a2 2 0 01-2 2h-2M6 14h12v8H6v-8z" />
                                </svg>
                                พิมพ์
                            </button>
                        </div>
                    </div>
                </div>

                <% if (!isEditable) { %>
                    <div class="mt-4 rounded-lg border border-gray-200 bg-gray-50 px-4 py-3 text-sm text-gray-700">
                        แบบฟอร์มนี้อยู่ในสถานะที่ไม่สามารถแก้ไขได้ ขณะนี้คุณสามารถดูรายละเอียดได้เท่านั้น
                    </div>
                    <% } %>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Main -->
                <div class="lg:col-span-2 space-y-6">

                    <!-- Student Profile -->
                    <div class="form-section">
                        <div class="section-head">
                            <h3 class="text-lg font-semibold text-gray-900">ข้อมูลนักศึกษา</h3>
                        </div>
                        <div class="section-body">
                            <div class="flex items-center gap-4 mb-6">
                                <img src="<%= (form && form.submitter && form.submitter.avatarUrl) || '/uploads/default.jpg' %>"
                                    class="h-16 w-16 rounded-full object-cover ring-2 ring-white shadow-soft"
                                    alt="avatar" />
                                <div>
                                    <p class="text-xl font-bold text-gray-900">
                                        <%= (form && form.submitter && form.submitter.name) || '-' %>
                                    </p>
                                    <p class="text-gray-600 text-sm">
                                        <%= (form && form.submitter && form.submitter.email) || '-' %>
                                    </p>
                                </div>
                            </div>
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div>
                                    <label class="block text-xs font-medium text-gray-500 mb-1">รหัสนักศึกษา</label>
                                    <p class="text-sm text-gray-900 font-medium">
                                        <%= (form && form.submitter && form.submitter.universityId) || '-' %>
                                    </p>
                                </div>
                                <div>
                                    <label class="block text-xs font-medium text-gray-500 mb-1">สาขา</label>
                                    <p class="text-sm text-gray-900 font-medium">
                                        <%= (form && form.submitter && form.submitter.major) || '-' %>
                                    </p>
                                </div>
                                <div>
                                    <label class="block text-xs font-medium text-gray-500 mb-1">ชั้นปี</label>
                                    <p class="text-sm text-gray-900 font-medium">
                                        <%= (form && form.submitter && (form.submitter.yearOfStudy !==undefined) ?
                                            form.submitter.yearOfStudy : '-' ) %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Course Information -->
                    <div class="form-section">
                        <div class="section-head">
                            <h3 class="text-lg font-semibold text-gray-900">ข้อมูลรายวิชา</h3>
                        </div>
                        <div class="section-body">
                            <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <span class="text-xs font-medium text-gray-600">รหัสวิชา</span>
                                        <p class="text-sm text-gray-900 font-medium">
                                            <%= (form && form.course && form.course.courseId) || '-' %>
                                        </p>
                                    </div>
                                    <div>
                                        <span class="text-xs font-medium text-gray-600">ชื่อวิชา</span>
                                        <p class="text-sm text-gray-900 font-medium">
                                            <%= (form && form.course && form.course.name) || '-' %>
                                        </p>
                                    </div>
                                    <div>
                                        <span class="text-xs font-medium text-gray-600">กลุ่มเรียน (Section)</span>
                                        <p class="text-sm text-gray-900 font-medium">
                                            <%= (form && form.section && form.section.name) || '-' %>
                                        </p>
                                    </div>
                                    <div>
                                        <span class="text-xs font-medium text-gray-600">หน่วยกิต</span>
                                        <p class="text-sm text-gray-900 font-medium">
                                            <%= (form && form.course && (form.course.credits !==undefined) ?
                                                form.course.credits : '-' ) %>
                                        </p>
                                    </div>
                                    <div>
                                        <span class="text-xs font-medium text-gray-600">ภาคการศึกษา</span>
                                        <p class="text-sm text-gray-900 font-medium">
                                            <%= (form && form.course && form.course.semester) || '-' %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% if (form && form.course && form.course.description) { %>
                                <div class="mt-4">
                                    <label class="block text-sm font-medium text-gray-700 mb-1">คำอธิบายรายวิชา</label>
                                    <p class="text-sm text-gray-900">
                                        <%= form.course.description %>
                                    </p>
                                </div>
                                <% } %>
                        </div>
                    </div>

                    <!-- Form Content -->
                    <form id="editForm" action="/student/forms/<%= (form && form._id) %>/update" method="POST"
                        class="form-section">
                        <input type="hidden" name="id" value="<%= (form && form._id) %>" />
                        <div class="section-head">
                            <h3 class="text-lg font-semibold text-gray-900">เนื้อหาแบบฟอร์ม</h3>
                            <p class="text-sm text-gray-600 mt-1">
                                <%= isEditable ? 'แก้ไขรายละเอียดการส่งแบบฟอร์มของคุณด้านล่าง'
                                    : 'โหมดอ่านอย่างเดียว — ไม่สามารถแก้ไขแบบฟอร์มในสถานะปัจจุบันได้' %>
                            </p>
                        </div>

                        <div class="section-body">
                            <% var fields=(form && form.template && Array.isArray(form.template.fields)) ?
                                form.template.fields : []; var data=(form && form.data) ? form.data : {}; %>

                                <% if (fields.length===0) { %>
                                    <p class="text-gray-600 text-sm">ไม่มีฟิลด์ที่กำหนดในเทมเพลต</p>
                                    <% } %>

                                        <div class="space-y-5">
                                            <% for (var idx=0; idx<fields.length; idx++){ var f=fields[idx]; var key=(f
                                                && (f.name || f.key || f.id || f._id)) ? String(f.name || f.key || f.id
                                                || f._id) : ('field_' + idx); var label=(f && f.label) ? f.label : key;
                                                var type=(f && f.type) ? String(f.type).toLowerCase() : 'text' ; var
                                                locked=!!(f && f.locked); var value='' ; if (data &&
                                                data.hasOwnProperty(key)) { value=data[key]; } else { var
                                                kLower=key.toLowerCase(); var tried=false; for (var dk in data) { if
                                                (data.hasOwnProperty(dk)) { if (String(dk).toLowerCase()===kLower) {
                                                value=data[dk]; tried=true; break; } } } if (!tried && f && f.label) {
                                                var lk=String(f.label); var lkLower=lk.toLowerCase(); for (var dk2 in
                                                data) { if (data.hasOwnProperty(dk2)) { if
                                                (String(dk2).toLowerCase()===lkLower) { value=data[dk2]; break; } } } }
                                                } if (type==='date' ) { var sv=(value===undefined || value===null) ? ''
                                                : String(value); value=sv.length>=10 ? sv.slice(0,10) : sv;
                                                } else {
                                                if (value !== null && typeof value === 'object') { try { value =
                                                JSON.stringify(value); } catch(e) { value = ''; } }
                                                }
                                                var disabledAttr = (!isEditable || locked) ? 'readonly disabled' : '';
                                                %>
                                                <div>
                                                    <label class="block text-sm font-medium text-gray-700 mb-2">
                                                        <%= label %>
                                                            <% if (locked) { %>
                                                                <span
                                                                    class="ml-2 text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-600 font-normal">🔒
                                                                    ล็อก</span>
                                                                <% } %>
                                                    </label>

                                                    <% if (type==='textarea' ) { %>
                                                        <textarea name="data[<%= key %>]"
                                                            class="w-full rounded-lg border border-gray-300 p-3 text-sm focus:outline-none focus:ring-2 focus:ring-kku-blue focus:border-transparent disabled:bg-gray-100 disabled:text-gray-600"
                                                            rows="4" <%- disabledAttr
                                                            %>><%= (value===undefined || value===null) ? '' : value %></textarea>
                                                        <% } else if (type==='number' ) { %>
                                                            <input type="number" name="data[<%= key %>]"
                                                                value="<%= (value===undefined || value===null) ? '' : value %>"
                                                                class="w-full rounded-lg border border-gray-300 p-3 text-sm focus:outline-none focus:ring-2 focus:ring-kku-blue focus:border-transparent disabled:bg-gray-100 disabled:text-gray-600"
                                                                <%- disabledAttr %> />
                                                            <% } else if (type==='date' ) { %>
                                                                <input type="date" name="data[<%= key %>]"
                                                                    value="<%= (value===undefined || value===null) ? '' : value %>"
                                                                    class="w-full rounded-lg border border-gray-300 p-3 text-sm focus:outline-none focus:ring-2 focus:ring-kku-blue focus:border-transparent disabled:bg-gray-100 disabled:text-gray-600"
                                                                    <%- disabledAttr %> />
                                                                <% } else { %>
                                                                    <input type="text" name="data[<%= key %>]"
                                                                        value="<%= (value===undefined || value===null) ? '' : value %>"
                                                                        class="w-full rounded-lg border border-gray-300 p-3 text-sm focus:outline-none focus:ring-2 focus:ring-kku-blue focus:border-transparent disabled:bg-gray-100 disabled:text-gray-600"
                                                                        <%- disabledAttr %> />
                                                                    <% } %>
                                                </div>
                                                <% } %>

                                                    <!-- Reason -->
                                                    <div>
                                                        <label class="block text-sm font-medium text-gray-700 mb-2">
                                                            เหตุผล <span
                                                                class="text-gray-500 font-normal">(ถ้ามี)</span>
                                                        </label>
                                                        <textarea name="reason" rows="3"
                                                            class="w-full rounded-lg border border-gray-300 p-3 text-sm focus:outline-none focus:ring-2 focus:ring-kku-blue focus:border-transparent disabled:bg-gray-100 disabled:text-gray-600"
                                                            <%=isEditable ? '' : 'readonly disabled' %>
                  placeholder="กรุณาระบุเหตุผลสำหรับคำขอนี้..."><%= (form && form.reason) || '' %></textarea>
                                                    </div>

                                                    <% if (isEditable) { %>
                                                        <div
                                                            class="no-print flex flex-col sm:flex-row gap-3 mt-6 pt-6 border-t border-gray-200">
                                                            <button type="submit"
                                                                class="action-button flex-1 bg-kku-blue text-white px-6 py-3 rounded-lg font-semibold hover:bg-kku-blue-dark transition-colors">
                                                                <svg class="w-5 h-5 inline mr-2" fill="none"
                                                                    stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                                        stroke-width="2"
                                                                        d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                                                                </svg>
                                                                บันทึกการเปลี่ยนแปลง
                                                            </button>
                                                            <button type="button" id="btnReset"
                                                                class="action-button flex-1 bg-gray-100 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-200 transition-colors">
                                                                <svg class="w-5 h-5 inline mr-2" fill="none"
                                                                    stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                                        stroke-width="2"
                                                                        d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                                                </svg>
                                                                รีเซ็ต
                                                            </button>
                                                            <button type="button" id="btnCancel"
                                                                class="action-button flex-1 bg-rose-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-rose-700 transition-colors">
                                                                <svg class="w-5 h-5 inline mr-2" fill="none"
                                                                    stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                                        stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                                                </svg>
                                                                ยกเลิกแบบฟอร์ม
                                                            </button>
                                                        </div>
                                                        <% } %>

                                                            <div
                                                                class="<%= isEditable ? 'mt-4' : 'mt-2 pt-4 border-t border-gray-200' %>">
                                                                <a href="/student/formhistory"
                                                                    class="no-print inline-flex items-center gap-2 rounded-lg border border-gray-200 bg-white px-3 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 hover:border-gray-300 shadow-sm">
                                                                    <svg class="h-4 w-4" viewBox="0 0 24 24" fill="none"
                                                                        stroke="currentColor">
                                                                        <path stroke-linecap="round"
                                                                            stroke-linejoin="round" stroke-width="2"
                                                                            d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                                                                    </svg>
                                                                    กลับไปยังประวัติแบบฟอร์ม
                                                                </a>
                                                            </div>
                                        </div>
                        </div>
                    </form>
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                    <!-- Timeline -->
                    <div class="form-section">
                        <div class="section-head">
                            <h3 class="text-lg font-semibold text-gray-900">ไทม์ไลน์</h3>
                        </div>
                        <div class="section-body">
                            <div class="space-y-4">
                                <div class="timeline-item">
                                    <div class="text-sm">
                                        <p class="font-medium text-gray-900">สร้างแบบฟอร์ม</p>
                                        <p class="text-xs text-gray-500 mt-1">
                                            <%= (form && form.createdAt) ? new
                                                Date(form.createdAt).toLocaleString('th-TH', { timeZone: 'Asia/Bangkok'
                                                }) : '-' %>
                                        </p>
                                    </div>
                                </div>
                                <% if (form && form.updatedAt && form.createdAt !==form.updatedAt) { %>
                                    <div class="timeline-item">
                                        <div class="text-sm">
                                            <p class="font-medium text-gray-900">อัปเดตล่าสุด</p>
                                            <p class="text-xs text-gray-500 mt-1">
                                                <%= new Date(form.updatedAt).toLocaleString('th-TH', {
                                                    timeZone: 'Asia/Bangkok' }) %>
                                            </p>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>

                    <!-- Reviewer -->
                    <div class="form-section">
                        <div class="section-head">
                            <h3 class="text-lg font-semibold text-gray-900">ผู้ตรวจ/ผู้พิจารณา</h3>
                        </div>
                        <div class="section-body">
                            <% var reviewersArr=[]; if (form && form.reviewers) { if (Array.isArray(form.reviewers)) {
                                reviewersArr=form.reviewers; } else { reviewersArr=[form.reviewers]; } } %>
                                <div class="space-y-3">
                                    <% if (reviewersArr.length===0) { %>
                                        <p class="text-sm text-gray-900 font-medium">ยังไม่ได้มอบหมาย</p>
                                        <% } else { for (var i=0;i<reviewersArr.length;i++){ var rv=reviewersArr[i]; %>
                                            <div
                                                class="pb-2 <%= i < reviewersArr.length - 1 ? 'border-b border-gray-100 mb-2' : '' %>">
                                                <div class="text-sm font-medium text-gray-900">
                                                    <%= (rv && rv.name) || '-' %>
                                                </div>
                                                <% if (rv && rv.email) { %>
                                                    <div class="text-xs text-gray-600">
                                                        <%= rv.email %>
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <% } } %>
                                </div>
                        </div>
                    </div>

                    <!-- Form Info -->
                    <div class="form-section">
                        <div class="section-head">
                            <h3 class="text-lg font-semibold text-gray-900">ข้อมูลแบบฟอร์ม</h3>
                        </div>
                        <div class="section-body">
                            <div class="space-y-3 text-sm">
                                <div class="flex justify-between items-center">
                                    <span class="text-gray-600">หมวดหมู่</span>
                                    <span class="font-medium text-gray-900">
                                        <span class="px-2 py-1 rounded-full bg-gray-100 text-gray-700 text-xs">
                                            <%= (form && form.template && form.template.category) || '-' %>
                                        </span>
                                    </span>
                                </div>
                                <% if (form && form.template && form.template.description) { %>
                                    <div class="pt-3 border-t border-gray-200">
                                        <p class="text-gray-600 text-xs mb-1">คำอธิบายเทมเพลต</p>
                                        <p class="text-gray-800 text-sm">
                                            <%= form.template.description %>
                                        </p>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </main>

    <!-- Hidden Cancel Form -->
    <form id="cancelForm" action="/student/forms/<%= (form && form._id) %>/cancel" method="POST" class="hidden">
        <input type="hidden" name="id" value="<%= (form && form._id) %>" />
        <input type="hidden" name="cancellationReason" id="cancellationReasonInput" />
    </form>

    <script>
        // รีเซ็ตฟอร์ม
        var btnReset = document.getElementById('btnReset');
        if (btnReset) {
            btnReset.addEventListener('click', function () {
                if (confirm('รีเซ็ตการแก้ไขทั้งหมดกลับค่าเดิม?')) { location.reload(); }
            });
        }
        // ยกเลิกแบบฟอร์ม
        var btnCancel = document.getElementById('btnCancel');
        if (btnCancel) {
            btnCancel.addEventListener('click', function () {
                var reason = prompt('ระบุเหตุผลการยกเลิก (ถ้ามี):', '');
                if (reason !== null) {
                    document.getElementById('cancellationReasonInput').value = reason;
                    document.getElementById('cancelForm').submit();
                }
            });
        }
    </script>
</body>

</html>