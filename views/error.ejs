    <script>
        // Initialize page based on URL or error type
        document.addEventListener('DOMContentLoaded', function() {
            // Check URL or use default (404)
            const urlParams = new URLSearchParams(window.location.search);
            const errorType = urlParams.get('error') || '404';
            showError(errorType);
        });

        // Show specific error page
        function showError(type) {
            const error404 = document.getElementById('error404');
            const error403 = document.getElementById('error403');
            
            if (type === '403') {
                error404.classList.add('hidden');
                error403.classList.remove('hidden');
                document.title = '403 Forbidden - FormEase';
            } else {
                error403.classList.add('hidden');
                error404.classList.remove('hidden');
                document.title = '404 Not Found - FormEase';
            }
        }

        // Navigation functions
        function goHome() {
            showMessage('Redirecting to home page...', 'info');
            setTimeout(() => {
                window.location.href = '/';
            }, 1000);
        }

        function goBack() {
            if (window.history.length > 1) {
                window.history.back();
            } else {
                goHome();
            }
        }

        function goToDashboard() {
            showMessage('Redirecting to dashboard...', 'info');
            setTimeout(() => {
                window.location.href = '/dashboard';
            }, 1000);
        }

        function goToForms() {
            showMessage('Redirecting to forms...', 'info');
            setTimeout(() => {
                window.location.href = '/forms';
            }, 1000);
        }

        // 403 specific functions
        function requestAccess() {
            showMessage('Access request submitted. You will be notified when reviewed.', 'success');
        }

        function contactAdmin() {
            showMessage('Opening admin contact form...', 'info');
            setTimeout(() => {
                alert('Admin Contact: admin@formease.kku.ac.th\nPhone: +66 43 202 555');
            }, 1000);
        }

        function viewPermissions() {
            showMessage('Redirecting to permissions page...', 'info');
            setTimeout(() => {
                window.location.href = '/permissions';
            }, 1000);
        }

        // Support functions
        function getSupport() {
            showMessage('Opening support center...', 'info');
            setTimeout(() => {
                window.open('/support', '_blank', 'noopener,noreferrer');
            }, 1000);
        }

        function contactSupport() {
            showMessage('Opening support contact...', 'info');
            setTimeout(() => {
                alert('Support Contact:\nEmail: support@formease.kku.ac.th\nPhone: +66 43 202 555\nHours: Mon-Fri 8:00-17:00');
            }, 1000);
        }

        // Mobile menu toggle
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            mobileMenu.classList.toggle('hidden');
        }

        // Show message function
        function showMessage(message, type) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `fixed top-4 right-4 p-4 rounded-md text-sm font-medium z-50 max-w-sm ${
                type === 'success' ? 'bg-green-100 border border-green-200 text-green-800' :
                type === 'error' ? 'bg-red-100 border border-red-200 text-red-800' :
                'bg-blue-100 border border-blue-200 text-blue-800'
            }`;
            messageDiv.textContent = message;
            
            document.body.appendChild(messageDiv);
            
            setTimeout(() => {
                if (document.body.contains(messageDiv)) {
                    document.body.removeChild(messageDiv);
                }
            }, 3000);
        }

        // URL-based error switching for demo
        function switchTo404() {
            showError('404');
            window.history.pushState({}, '', '?error=404');
        }

        function switchTo403() {
            showError('403');
            window.history.pushState({}, '', '?error=403');
        }

        // Add demo buttons for testing (remove in production)
        document.addEventListener('DOMContentLoaded', function() {
            const demoButtons = document.createElement('div');
            demoButtons.className = 'fixed bottom-4 left-4 flex gap-2 z-50';
            demoButtons.innerHTML = `
                <button onclick="switchTo404()" class="bg-blue-600 text-white px-3 py-2 rounded text-sm hover:bg-blue-700 transition-colors">
                    Show 404
                </button>
                <button onclick="switchTo403()" class="bg-red-600 text-white px-3 py-2 rounded text-sm hover:bg-red-700 transition-colors">
                    Show 403
                </button>
            `;
            document.body.appendChild(demoButtons);
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(e) {
            const mobileMenu = document.getElementById('mobileMenu');
            const menuButton = e.target.closest('button[onclick="toggleMobileMenu()"]');
            
            if (!menuButton && !mobileMenu.contains(e.target) && !mobileMenu.classList.contains('hidden')) {
                mobileMenu.classList.add('hidden');
            }
        });
    </script>
