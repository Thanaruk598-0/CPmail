<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <title>Lecturer Dashboard - FormEase</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <%- include('../partials/navbar', { user: currentUser, activeMenu: 'dashboard' }) %>

  <div class="container py-4">
    <h2 class="mb-3">Lecturer Dashboard</h2>
    <p class="text-muted">Welcome, <strong><%= currentUser.name %></strong> | <%= currentDate %></p>

    <!-- สรุปสถิติ -->
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card text-center p-3">
          <h4 class="text-primary"><%= totalForms %></h4>
          <p class="text-muted">Forms Assigned</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center p-3">
          <h4 class="text-warning"><%= pending %></h4>
          <p class="text-muted">Pending Review</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center p-3">
          <h4 class="text-success"><%= approved %></h4>
          <p class="text-muted">Approved</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center p-3">
          <h4 class="text-danger"><%= rejected %></h4>
          <p class="text-muted">Rejected</p>
        </div>
      </div>
    </div>

    <!-- รายการฟอร์ม -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Submitted Forms</h5>
      </div>
      <div class="card-body">
        <% if (forms.length > 0) { %>
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Student</th>
                <th>Form Title</th>
                <th>Course</th>
                <th>Status</th>
                <th>Submitted</th>
              </tr>
            </thead>
            <tbody>
              <% forms.forEach(f => { %>
                <tr>
                  <td><%= f.submitter?.name || 'Unknown' %></td>
                  <td><%= f.template?.title || 'Untitled' %></td>
                  <td><%= f.course?.name || '-' %></td>
                  <td>
                    <% if (f.status === 'approved') { %>
                      <span class="badge bg-success">Approved</span>
                    <% } else if (f.status === 'pending') { %>
                      <span class="badge bg-warning text-dark">Pending</span>
                    <% } else if (f.status === 'rejected') { %>
                      <span class="badge bg-danger">Rejected</span>
                    <% } else { %>
                      <span class="badge bg-secondary"><%= f.status %></span>
                    <% } %>
                  </td>
                  <td><%= new Date(f.submittedAt).toLocaleString('th-TH') %></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p class="text-muted">No forms submitted yet.</p>
        <% } %>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h5>Recent Activity</h5>
          </div>
          <div class="card-body">
            <% if (recentActivity.length > 0) { %>
              <% recentActivity.forEach(a => { %>
                <div class="mb-2">
                  <strong><%= a.student %></strong> submitted 
                  "<%= a.formTitle %>" 
                  (<%= a.status %>) 
                  <span class="text-muted small">— <%= a.timeAgo %></span>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-muted">No recent activity.</p>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Notifications -->
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h5>Notifications</h5>
            <span class="badge bg-primary"><%= unreadNotifications %> unread</span>
          </div>
          <div class="card-body">
            <% if (recentNotifications.length > 0) { %>
              <% recentNotifications.forEach(n => { %>
                <div class="alert alert-info mb-2">
                  <%= n.message || 'Notification' %>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-muted">No new notifications.</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>

 <!-- Courses & Sections Section -->
<div class="card mb-4 shadow-sm">
  <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><i class="fas fa-book-open me-2"></i>Courses & Sections</h5>
    <span class="badge bg-light text-dark"><%= courses.length %> Courses</span>
  </div>
  <div class="card-body">
    <% if (courses.length > 0) { %>
      <% courses.forEach(course => { %>
        <div class="mb-4 p-3 border rounded bg-light">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <h6 class="fw-bold mb-0"><i class="fas fa-graduation-cap me-1"></i><%= course.name %> (<%= course.courseId %>)</h6>
            <small class="text-muted">Lecturers: 
              <% course.lecturers.forEach((lect, i) => { %>
                <%= lect.name %><%= i < course.lecturers.length - 1 ? ', ' : '' %>
              <% }) %>
            </small>
          </div>

          <% if (course.sections.length > 0) { %>
            <table class="table table-sm table-hover table-bordered mb-0">
              <thead class="table-secondary">
                <tr>
                  <th>Section</th>
                  <th>Semester</th>
                  <th>Year</th>
                  <th>Room</th>
                </tr>
              </thead>
              <tbody>
                <% course.sections.forEach(sec => { %>
                  <tr>
                    <td><i class="fas fa-layer-group me-1"></i><%= sec.name %></td>
                    <td><%= sec.semester %></td>
                    <td><%= sec.year %></td>
                    <td><%= sec.room || '-' %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          <% } else { %>
            <p class="text-muted mb-0"><i class="fas fa-info-circle me-1"></i>No sections for this course.</p>
          <% } %>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-muted"><i class="fas fa-exclamation-triangle me-1"></i>No courses available.</p>
    <% } %>
  </div>
</div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
