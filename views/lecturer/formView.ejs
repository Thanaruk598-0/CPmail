<!-- views/lecturer/formView.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Form Details - FormEase</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    .form-view-container { max-width: 800px; margin: 0 auto; }
    .back-btn { position: absolute; top: 20px; left: 20px; z-index: 10; }
    .attachment-list { list-style: none; padding: 0; }
    .attachment-item { display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #eee; }
    .status-badge { padding: 4px 8px; border-radius: 20px; font-size: 0.8em; }
    .priority-badge { padding: 2px 6px; border-radius: 10px; font-size: 0.7em; }
  </style>
</head>
<body class="bg-light">
  <%- include('../partials/navbar', { user: currentUser, activeMenu: 'formHistory' }) %>

  <div class="container-fluid py-4">
    <a href="/lecturer/history" class="btn btn-outline-secondary back-btn mb-4"><i class="fas fa-arrow-left me-1"></i>Back to History</a>
    
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="card shadow">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><%= form.template?.title || 'Untitled Form' %> - <%= form.submitter?.name || 'Unknown Student' %></h4>
            <div>
              <span class="status-badge <%= form.status === 'approved' ? 'bg-success' : form.status === 'pending' ? 'bg-warning' : form.status === 'rejected' ? 'bg-danger' : 'bg-secondary' %> text-white me-2">
                <%= form.status.charAt(0).toUpperCase() + form.status.slice(1) %>
              </span>
              <span class="priority-badge <%= form.priority === 'high' ? 'bg-danger' : form.priority === 'medium' ? 'bg-warning' : 'bg-success' %> text-white">
                <%= form.priority.charAt(0).toUpperCase() + form.priority.slice(1) %>
              </span>
            </div>
          </div>
          <div class="card-body">
            <!-- Student Information -->
            <div class="row mb-4">
              <div class="col-md-6">
                <h5><i class="fas fa-user me-2"></i>Student Information</h5>
                <img src="<%= form.submitter?.avatarUrl || 'https://via.placeholder.com/60' %>" alt="Avatar" class="rounded-circle mb-2" style="width: 60px; height: 60px;">
                <p><strong>Name:</strong> <%= form.submitter?.name || 'N/A' %></p>
                <p><strong>Student ID:</strong> <%= form.submitter?.universityId || 'N/A' %></p>
                <p><strong>Section:</strong> <%= form.section?.name || 'N/A' %> (<%= form.course?.name || 'N/A' %>)</p>
              </div>
              <div class="col-md-6">
                <h5><i class="fas fa-align-left me-2"></i>Description</h5>
                <p><%= form.data?.description || form.data?.details || 'No description provided' %></p>
              </div>
            </div>

            <!-- Form Details -->
            <div class="row mb-4">
              <div class="col-md-6">
                <h5><i class="fas fa-file-alt me-2"></i>Form Details</h5>
                <p><strong>Type:</strong> <%= form.template?.title || 'N/A' %></p>
                <p><strong>Title:</strong> <%= form.data?.title || 'N/A' %></p>
                <p><strong>Submitted:</strong> <%= new Date(form.createdAt).toLocaleString('th-TH') %></p>
                <% if (form.reviewComment) { %>
                  <p><strong>Review Comment:</strong> <%= form.reviewComment %></p>
                <% } %>
              </div>
              <div class="col-md-6">
                <h5><i class="fas fa-paperclip me-2"></i>Attachments</h5>
                <% if (form.attachments && form.attachments.length > 0) { %>
                  <ul class="attachment-list">
                    <% form.attachments.forEach(attachment => { %>
                      <li class="attachment-item">
                        <span><%= attachment.split('/').pop() %></span>
                        <a href="<%= attachment %>" class="btn btn-sm btn-outline-primary" download>Download</a>
                      </li>
                    <% }); %>
                  </ul>
                <% } else { %>
                  <p class="text-muted">No attachments.</p>
                <% } %>
              </div>
            </div>

            <!-- Form Fields (dynamic from template) -->
            <% if (form.template?.fields && form.template.fields.length > 0) { %>
              <div class="row mb-4">
                <div class="col-12">
                  <h5><i class="fas fa-list me-2"></i>Form Fields</h5>
                  <% form.template.fields.forEach(field => { %>
                    <div class="mb-3">
                      <label class="form-label fw-bold"><%= field.label %></label>
                      <p class="form-control-plaintext"><%= form.data?.[field.label.toLowerCase().replace(/\s+/g, '_')] || 'N/A' %></p>
                    </div>
                  <% }); %>
                </div>
              </div>
            <% } %>

            <!-- Actions -->
            <div class="row">
              <div class="col-12 text-end">
                <% if (form.status === 'pending') { %>
                  <form method="POST" action="/lecturer/history/<%= form._id %>/approve" class="d-inline me-2">
                    <button type="submit" class="btn btn-success me-2"><i class="fas fa-check me-1"></i>Approve</button>
                  </form>
                  <form method="POST" action="/lecturer/history/<%= form._id %>/reject" class="d-inline">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-times me-1"></i>Reject</button>
                  </form>
                <% } else { %>
                  <button class="btn btn-secondary" onclick="history.back()"><i class="fas fa-arrow-left me-1"></i>Back</button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>